@model Diabetes.MVC.Models.Components.FoodListViewModel

@foreach (var item in Model.Items)
{
    <details class="card">
        <summary>
            <div class="row no-gutters">
                <div class="col-8">
                    <div class="card-body">
                        <h5 class="card-text">@item.Name</h5>
                        <h5 class="card-text d-block"><small class="text-muted">Ккал / Ж / Б / У</small></h5>
                        <h5 class="card-text d-block"><small class="text-muted">@item.Kcal / @item.Fat / @item.Protein / @item.Carbohydrate</small></h5>
                    </div>
                </div>
                <div class="col-2 d-flex align-items-center">
                    <a asp-controller="FoodForNoteEditing" asp-action="AddToNoteList" asp-route-id="@item.Id"><img src="~/icons/basket.svg"></a>
                </div>
                <div class="col-1 d-flex align-items-center">
                    <a asp-controller="FoodForNoteEditing" asp-action="AddToFavorite" asp-route-id="@item.Id"><img src="~/icons/copy.svg"></a>
                </div>
            </div>
        </summary>
        <p class="mt-2 mb-0">@item.Details</p>
    </details>
}